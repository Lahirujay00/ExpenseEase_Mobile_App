<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#30FFFFFF" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>
    <!-- Inner circle -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:endColor="#5E6EF7"
                android:startColor="#7C88FF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>